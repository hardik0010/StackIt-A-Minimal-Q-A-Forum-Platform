{
  "name": "stackit",
  "version": "1.0.0",
  "description": "A minimal Q&A forum platform for collaborative learning",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "cd client && npm start",
    "client-install": "cd client && npm install",
    "dev-full": "concurrently \"npm run dev\" \"npm run client\"",
    "install-all": "npm install && npm run client-install"
  },
  "keywords": [
    "qa",
    "forum",
    "stackoverflow",
    "questions",
    "answers"
  ],
  "author": "StackIt Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.40.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "emoji-picker-react": "^4.12.3",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.10.1",
    "nodemailer-sendgrid-transport": "^0.2.0",
    "quill-emoji": "^0.2.0",
    "react-hot-toast": "^2.5.2",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  }
}
